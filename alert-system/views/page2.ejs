<!DOCTYPE html>
<html>
<head>
  <title>Page 2</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@1,300&family=Open+Sans&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <div class="heading">
  <h1>Active Alerts</h1>
  </div>
  <br>
  <div class="table-layout">
  <h2>Following are the active alerts</h2>
  
  <table class="table table-light">
    <thead>
      <tr class="table-dark">
        <th>Alert Title</th>
        <th>Alert Time</th>
        <th>Alert Date</th>
        <th>Alert Type</th>
      </tr>
    </thead>
    <tbody>
      <% for (const alert of alerts) { %>
        <tr>
          <td><%= alert.title %></td>
          <td><%= alert.time %></td>
          <td><%= alert.date %></td>
          <td><%= alert.type %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
